  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.{ts,html}' -e ts,html --exec 'tsc && npm run css:build && node dist/index.js'",
    "build": "tsc -p .",
    "start": "node dist/index.js",
    "css:dev": "tailwindcss -i ./src/style.css -o ./public/style.css --watch",
    "css:build": "tailwindcss build ./src/style.css -o ./public/style.css"
  },
